<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>sj_Weight_Amount__c</fullName>
    <description>Weighted amount utilising the &apos;Likelihood&apos; data found on the related Opportunity</description>
    <formula>Amount__c * 
CASE(
    TEXT( Opportunity__r.Likelihood__c ), 
    &quot;10%&quot;, 0.10, 
    &quot;20%&quot;, 0.20, 
    &quot;30%&quot;, 0.30, 
    &quot;40%&quot;, 0.40, 
    &quot;50%&quot;, 0.50, 
    &quot;60%&quot;, 0.60, 
    &quot;70%&quot;, 0.70, 
    &quot;80%&quot;, 0.80, 
    &quot;90%&quot;, 0.90, 
    0
)</formula>
    <label>Weight Amount</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackTrending>false</trackTrending>
    <type>Currency</type>
</CustomField>
